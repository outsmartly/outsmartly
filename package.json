    "syncpack": "syncpack fix-mismatches",
    "clean": "git clean -fdX"
  },
  "devDependencies": {
    "@jayphelps/jay-scripts": "^0.0.50",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.4.13",
