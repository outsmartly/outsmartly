    "@types/react-dom": "^17.0.9",
    "@types/sinon": "^10.0.2",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "syncpack": "^5.6.10",
    "ts-jest": "^27.1.0",
    "typescript": "4.4.2"
